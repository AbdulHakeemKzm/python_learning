<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput: 
                hint_text: "username"
            TextInput: 
                hint_text: "password"
            Button:
                text:"Login"
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password"
            Button:
                text: "Sign Up"
                on_press: root.sign_up()


<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign Up"
        TextInput:
            id: username 
            hint_text: "username"
        TextInput:
            id: password 
            hint_text: "password"
        Button:
            text:"submit"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up successful"
        Button:
            text: "Login page"
            on_press: root.go_to_login()


<RootWidget>:
    LoginScreen:
        name: "Login_screen"
    SignUpScreen:
        name: "Sign_up_screen"
    SignUpScreenSuccess :
        name: "sign_up_screen_success"



